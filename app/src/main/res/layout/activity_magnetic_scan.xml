<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mooo.sestus.indoor_locator.scan.MagneticScanActivity">

    <FrameLayout
        android:id="@+id/cont_magnetic_scan"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_start_rec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:src="@drawable/ic_rec"
        app:fabSize="normal"
        app:layout_anchor="@id/cont_magnetic_scan"
        app:layout_anchorGravity="bottom|right|end" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_stop_rec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:src="@android:drawable/ic_media_pause"
        app:fabSize="normal"
        app:layout_anchor="@id/cont_magnetic_scan"
        app:layout_anchorGravity="bottom|right|end"
        android:visibility="gone"/>

</android.support.design.widget.CoordinatorLayout>
