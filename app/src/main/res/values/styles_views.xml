<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- ****************************** Input Fields ************************************ -->
    <style name="InputField" parent="Widget.AppCompat.EditText"/>

    <style name="InputField.Id">
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:layout_marginLeft">64dp</item>
        <item name="android:layout_marginRight">64dp</item>
        <item name="android:inputType">textCapWords</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <!-- ****************************** Labels ************************************ -->

    <style name="Label" >
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:alpha">.86</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Label.FloorPlanHeader">
        <item name="android:layout_marginBottom">32dp</item>
        <item name="android:textSize">34sp</item>
    </style>

    <style name="Label.Sub">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginLeft">64dp</item>
        <item name="android:layout_marginRight">64dp</item>
    </style>
    <!-- ****************************** Containers ************************************ -->

    <!-- ****************************** Buttons ************************************ -->

    <style name="Button.Flat" parent="Widget.AppCompat.Button.Borderless" >
        <item name="android:background">@drawable/button_flat</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:minWidth">88dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingLeft">16sp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <style name="Button.Flat.Primary" >

    </style>

    <!-- ****************************** Others ************************************ -->

    <style name="Spinner">
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:minWidth">88dp</item>
        <item name="android:textSize">32sp</item>
        <item name="android:paddingLeft">16sp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:popupBackground">@color/primary</item>
        <item name="android:overlapAnchor">false</item>


    </style>

</resources>